@{
    ViewData["Title"] = "Find bolig";
}

<div class="container">
    <div class="row">
        <div class="col-3 col-sm-3 mb-4">
            <div class="card-body bg-dark-purple rounded">
                <h2>Søge kriterier</h2>

                <section>
                    <form>
                        <label for="search">Søg på postummer:</label>
                        <input class="text-muted w-100" type="text" id="search" name="search" placeholder="ex. 7100" />

                        <div>
                            <h5>Husleje:</h5>
                            <label for="search">Fra:</label>
                            <input class="text-muted w-25" type="text" id="search" name="search" placeholder="1500" />

                            <label for="search">Til:</label>
                            <input class="text-muted w-25" type="text" id="search" name="search" placeholder="7000" />

                           

                        </div>


                        <div class="filter-criteria mt-2">
                            <h5>Boligtype</h5>
                            <fieldset>
                                <input type="checkbox" id="villa" name="villa" />
                                <label for=" villa">Villa</label><br />

                                <input type="checkbox" id="lejlighed" name="Lejlighed" />
                                <label for=" lejlighed">Lejlighed</label><br />

                                <input type="checkbox" id="room" name="room" />
                                <label for=" room">Værelse</label><br />

                                <input type="checkbox" id="room" name="room" />
                                <label for=" room">Rækkehus</label><br />

                            </fieldset>
                        </div>



                        <div class="filter-criteria mt-2">
                            <h5>Værelser</h5>
                            <fieldset>
                                <input type="checkbox" id="1room" name="1" value="1" />
                                <label for=" 1room">1 værelse</label><br />

                                <input type="checkbox" id="2room" name="2" value="2" />
                                <label for=" 2room">2 værelser</label><br />

                                <input type="checkbox" id="3room" name="3" value="3" />
                                <label for=" 3room">3 værelser</label><br />

                                <input type="checkbox" id="3room" name="3" value="3" />
                                <label for=" 3room">4 værelser</label><br />

                                <input type="checkbox" id="3room" name="3" value="3" />
                                <label for=" 3room">5 eller flere</label>
                            </fieldset>
                        </div>

                        <div class="filter-criteria mt-2">
                            <h5>Andre filtre</h5>
                            <fieldset>
                                <input type="checkbox" id="animals" name="animals" value="animals" />
                                <label for=" animals">Husdyr tilladt</label><br />

                                <input type="checkbox" id="animals" name="animals" value="animals" />
                                <label for=" animals">Have</label>


                            </fieldset>
                            <button class="btn btn-primary">Ryd filter</button>
                        </div>

                    </form>
                </section>

            </div>

        </div>

        <div class="col-3">
            <div class="card-body bg-dark-purple rounded">
                <img class="card-img-top" src="~/assets/randomImg/pexels-binyamin-mellish-186077.jpg" />
                <p>en fin tekst</p>
                <div class="justify-content-center">
                    <button class="btn btn-primary w-100">Søg bolig</button>
                </div>
            </div>
        </div>

        <div class="col-3">
            <div class="card-body bg-dark-purple rounded">
                <img class="card-img-top" src="~/assets/randomImg/pexels-mark-mccammon-2724749.jpg" />
                <p>en fin tekst</p>
                <div class="justify-content-center">
                    <a class="nav-link text-light" asp-area="" asp-controller="Apply" asp-action="Apply"></a>
                    <button class="btn btn-primary w-100">Søg bolig</button>
                </div>
            </div>
        </div>

        <div class="col-3">
            <div class="card-body bg-dark-purple rounded">
                <img class="card-img-top" src="~/assets/randomImg/pexels-pixabay-279719.jpg" />
                <p>en fin tekst</p>
                <div class="justify-content-center">
                    <button class="btn btn-primary w-100">Søg bolig</button>
                </div>
            </div>
        </div>


    </div>

</div>


